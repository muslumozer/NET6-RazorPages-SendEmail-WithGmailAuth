@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="col-md-3 text-left">
    <form method="post">
        <input type="text" class="form-control d-grid gap-3 d-md-block" asp-for="Email.NameSurname" placeholder="Name and Surname" />
        <br />
        <input type="email" class="form-control d-grid gap-3 d-md-block" asp-for="Email.EmailAddress" placeholder="Email Address" />
        <br />
        <textarea cols="40" rows="5" class="form-control d-grid gap-3 d-md-block" asp-for="Email.Message" placeholder="Message" ></textarea>
        <br />
        <input type="submit" class="btn btn-primary" value="Send" />
    </form>
</div>